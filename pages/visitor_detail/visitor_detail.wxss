@import "../common_style.wxss";

.submit-btn {
  width: 320rpx;
  min-height: 30rpx;
  margin: 15rpx;
  font-size: 30rpx;
  text-align: center;
  border: 1px #ddd;
}

.submit {
  background-color: #0db130;
  color: #eeeeee;
}

.submit_hover {
  background-color: #0db130;
  opacity: 0.5;
}

.reset-btn {
  width: 320rpx;
  min-height: 30rpx;
  margin: 15rpx;
  font-size: 30rpx;
  text-align: center;
  border: 1px #ddd;
}

.reset {
  background-color: #dd3a24;
  color: #eeeeee;
}

.reset_hover {
  background-color: #dd3a24;
  opacity: 0.5;
}